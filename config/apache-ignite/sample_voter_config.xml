<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <type>IGNITE</type>
    <driver>org.apache.ignite.IgniteJdbcThinDriver</driver>
    <url>jdbc:ignite:thin://127.0.0.1</url>
    <username>ignite</username>
    <password>ignite</password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    <batchsize>128</batchsize>

    <scalefactor>1</scalefactor>

    <!-- The workload -->
    <terminals>1</terminals>
    <works>
        <work>
            <time>60</time>
            <rate>10000</rate>
            <weights>100</weights>
        </work>
    </works>

    <!-- Voter Procedures declaration -->
    <transactiontypes>
        <transactiontype>
            <name>Vote</name>
        </transactiontype>
    </transactiontypes>
</parameters>
